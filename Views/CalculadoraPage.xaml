<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CalculadoraDani.Views.CalculadoraPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <StackLayout>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center" />
        <Entry
            x:Name="NumeroUno"
            Placeholder="Ingrese el primer valor"
            Text="{Binding Numero1.Numero1}" />
        <Entry
            x:Name="NumeroDos"
            Placeholder="Ingrese el segundo valor"
            Text="{Binding MiConsulta.Pregunta}" />
        <Entry
            x:Name="RespuestaEntry"
            Placeholder="Su respuesta es..."
            Text="{Binding MiConsulta.Respuesta}" />
        <Button
            x:Name="EnviarButton"
            Command="{Binding EnviarPregunta}"
            Text="Enviar" />


    </StackLayout>